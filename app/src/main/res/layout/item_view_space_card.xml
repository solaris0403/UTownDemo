<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!--    <FrameLayout-->
    <!--        android:id="@+id/placeholder_left"-->
    <!--        android:layout_width="16dp"-->
    <!--        android:layout_height="1dp" />-->

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:cardPreventCornerOverlap="false"
            app:cardUseCompatPadding="false">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/icon_discover_item_flag" />

                <TextView
                    android:layout_width="36dp"
                    android:layout_height="18dp"
                    android:background="@drawable/shape_bg_space_flag"
                    android:gravity="center"
                    android:text="Live"
                    android:textColor="#FFFFFFFF"
                    android:textFontWeight="600"
                    android:textSize="10dp" />
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="14dp"
                android:layout_gravity="bottom"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                app:cardBackgroundColor="#4D000000"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardPreventCornerOverlap="false"
                app:cardUseCompatPadding="false">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/icon_discover_item_person" />

                    <TextView
                        android:id="@+id/tv_discover_online"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="23.5k"
                        android:textColor="#FFFFFFFF"
                        android:textFontWeight="400"
                        android:textSize="10dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


            <TextView
                android:id="@+id/tv_space_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="58dp"
                android:layout_marginRight="38dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="HAVEFUNCLWITOOOOOOOO"
                android:textColor="#FFFFFFFF"
                android:textFontWeight="400"
                android:textSize="14dp" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_space_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="dddddddddddd long"
            android:textColor="#B2000000"
            android:textFontWeight="600"
            android:textSize="12dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="4dp"
                    android:src="@drawable/icon_default_avatar" />

                <TextView
                    android:id="@+id/tv_space_author"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="Zark"
                    android:textColor="#99000000"
                    android:textFontWeight="400"
                    android:textSize="12dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/btn_enter"
                android:layout_width="51dp"
                android:layout_height="22dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/bg_discover_item_enter"
                android:gravity="center"
                android:text="Enter"
                android:textColor="#E90E09"
                android:textSize="12dp" />
        </RelativeLayout>
    </LinearLayout>

    <!--    <FrameLayout-->
    <!--        android:id="@+id/placeholder_right"-->
    <!--        android:layout_width="16dp"-->
    <!--        android:layout_height="1dp" />-->
</LinearLayout>